<div class="col-lg-8 mx-auto">
  <div class="card shadow mt-5 color">
    <div class="card-header">
      <h1 class="card-title"> New Property </h1>
    </div>
    <div class="card-body col-lg-8 mx-auto">
		<%= form_for  @property,url: properties_path ,remote: true,html: { multipart: true } do |form| %>
			<div class="form-group mb-3">
				<%= form.label :name %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<%= form.text_field :name ,class:"form-control form-control-lg"%>
				<% @property.errors.full_messages_for(:name).each do |message| %>
	          <div><%= message %></div>
	      <% end %>
			</div>

			<div class="form-group mb-3">
				<%= form.label :location %>
				<%= form.text_field :location ,class:"form-control form-control-lg"%>
				<% @property.errors.full_messages_for(:location).each do |message| %>
	          <div><%= message %></div>
	      <% end %>
			</div>

			<div class="form-group mb-3">
				<%= form.label :price %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<%= form.text_field :price ,class:"form-control form-control-lg"%>
				<% @property.errors.full_messages_for(:price).each do |message| %>
	          <div><%= message %></div>
	      <% end %>
			</div>

			<div class="form-group mb-3" >
		    <%= form.label :image %><br>
		    <%= form.file_field :image %>
	    </div>

			<div class="form-group mb-3">
				&emsp;&emsp;&emsp;&emsp;<%= form.submit class:"btn btn-primary" %> |
				<%= link_to "Back", root_path,class:"btn btn-outline-primary"%>
			</div>
		<% end %>
		</div>
	</div>